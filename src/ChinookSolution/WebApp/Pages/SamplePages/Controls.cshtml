@page
@model WebApp.Pages.SamplePages.ControlsModel
@{
    ViewData["Title"] = "Various Form Controls";
}
@section CustomCSS{
   @* The file _MyCustomCSS contains valid code that represents css
    The partial tag will bring in the content of the file
    The section reference of CustomCSS will place the file contents
    on the layout page in the "nammed " RenderSection*@

    <partial name="_MyCustomCSS" />

}

<h1>Various Form Controls</h1>

@if(!string.IsNullOrWhiteSpace(Model.Feedback)){
    <p>@Model.Feedback</p>
}
<section class="setflex">
    
<div class="onethird">
    <h3>TextBoxes</h3>
    <form method="post">
        <label>
            Enter an email
            <input type="email" asp-for="EmailText"
            placeholder="enter email"  />
        </label>
        <br />

          <label>
            Enter an Password
            <input type="password" asp-for="PasswordText"
            placeholder="enter password" />
        </label>
        <br />

          <label>
            Enter an Date
            <input type="date" asp-for="DateText"  />
        </label>
        <br />

           <label>
            Enter an Time
            <input type="time" asp-for="TimeText" />
        </label>
        <br />

        <button type="submit" value="textbox" id="theTextButton" name="theTextButton"
        asp-page-handler="TextBox">Text Submit</button>
    </form>
</div>

</section>



<section class="setflex">
    
<div class="onethird">
    <h3>Radiobuttons CheckBox TextArea</h3>
    <form method="post">
        <label>
            Select Favorite meal<br />
 
        </label>
        <input type="radio" value="breakfast" asp-for="Meal" /> 
        &nbsp; Breakfast<br />
         <input type="radio" value="lunch" asp-for="Meal" /> 
        &nbsp; Breakfast<br />
         <input type="radio" value="dinner" asp-for="Meal" /> 
        &nbsp; Breakfast<br />
         <input type="radio" value="snacks" asp-for="Meal" /> 
        &nbsp; Breakfast<br />


       @* //CheckBox*@
       <label>
           <input type="checkbox" value="true" asp-for="AcceptanceBox" />
           &nbsp; I agree to terms
       </label>
       <br />
       <label>
           Message
           <textarea rows="5" cols="60" placeholder="enter message" asp-for="MessageBody"></textarea>
       </label>
       <br />
        <button type="submit" value="radiocheckarea" id="theRadioCheckAreaButton" name="theRadioCheckAreaButton"
        asp-page-handler="RadioCheckArea"> Radio/Check/Area Submit</button>
    </form>
</div>

</section>


<section class="setflex">
    
<div class="onethird">
    <h3>List and Slider</h3>
    <form method="post">
        <button type="submit" value="ListSlider" id="theListSliderButton" name="theLisSlidertButton"
        asp-page-handler="ListSlider">List/Slider Submit</button>
    </form>
</div>

</section>